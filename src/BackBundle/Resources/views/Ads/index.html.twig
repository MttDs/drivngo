{% extends "::dashboard.html.twig" %}

{% block body %}

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Tableau de bord
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Publicités
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>Selectionner une auto-école</h2>
             <ul class="list-group">
                {% for school in schools %}
                    <li class="list-group-item"><a href="{{ path('back_schools_ads_show', { school_id: school.id }) }}">{{ school.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
