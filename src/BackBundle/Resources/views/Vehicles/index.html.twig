{% extends "::school_dashboard.html.twig" %}

{% block body %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Votre auto école <small>{{ school.name }}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="{{ path('back_schools_show', { id: school.id }) }}">{{ school.name }}</a>
                </li>
                <li class="active">
                    Les vehicules
                </li>
            </ol>
        </div>
    </div>

    <div class="text-right">
        <a href="{{ path('back_schools_vehicles_new', { school_id: school.id }) }}" class="btn btn-success">Nouveau</a>
    </div>

    <div class="row">
        <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Marque</th>
                    <th>Référence</th>
                    <th>Type</th>
                    <th>Dernier contrôle</th>
                    <th>Nombre de km</th>
                    <th>Editer</th>
                </tr>
            </thead>
            <tbody>
                {% for vehicle in school.vehicles %}
                    <tr>
                        <td>{{ vehicle.brand }}</td>
                        <td>{{ vehicle.ref }}</td>
                        <td>{{ vehicle.type }}</td>
                        <td>{{ vehicle.lastCheck|date('d-m-Y') }}</td>
                        <td>{{ vehicle.kilometers }}</td>
                        <td>
                            <a href="{{ path('back_schools_vehicles_edit', { school_id: school.id, vehicle_id: vehicle.id }) }}" class="btn btn-primary">Editer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% endblock %}
