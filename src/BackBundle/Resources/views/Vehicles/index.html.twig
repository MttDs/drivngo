{% extends "::school_dashboard.html.twig" %}

{% block body %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ school.name }}<small>Vehicules</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="{{ path('back_schools_show', { id: school.id }) }}">{{ school.name }}</a>
                </li>
                <li class="active">
                    Les vehicules
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Marque</th>
                    <th>Référence</th>
                    <th>Type</th>
                    <th>Dernier contrôle</th>
                    <th>Nombre de km</th>
                    <th>Editer</th>
                </tr>
            </thead>
            <tbody>
                {% for vehicle in school.vehicles %}
                    <tr>
                        <td>{{ student.user.brand }}</td>
                        <td>{{ student.user.ref }}</td>
                        <td>{{ student.user.type }}</td>
                        <td>{{ student.user.lastCheck }}</td>
                        <td>{{ student.user.kilometers }}</td>
                        <td>
                            <a href="" class="btn btn-primary">Editer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
{% endblock %}
