{% extends "::school_dashboard.html.twig" %}

{% block body %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ school.name }}
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="{{ path('back_schools_show', { id: school.id }) }}">{{ school.name }}</a>
                </li>
                <li>
                    Mes notes
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {% if 0 != reports|length %}
                <p>Votre moyenne dans cette auto-Ã©cole : <strong>{{ note }} / 5</strong></p>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Commentaire</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for report in reports %}
                            <tr>
                                <td>{{ report.voter.firstname }}</td>
                                <td>{{ report.voter.lastname }}</td>
                                <td>{{ report.message }}</td>
                                <td>{{ report.rating }} / 5</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                Vous n'avez pas encore de note
            {% endif %}
        </div>
    </div>
{% endblock %}
