{% extends "::school_dashboard.html.twig" %}

{% block body %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ school.name }} <small>Tarifs</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="{{ path('back_schools_show', { 'id': school.id }) }}">{{ school.name }}</a>
                </li>
                <li>
                    Les tarifs
                </li>
                <li class="active">
                    Ajouter
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>Ajouter un tarif</h2>

            {{ form_start(form, { attr: { action: path('back_schools_pricings_create', { 'school_id': school.id }) }}) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { attr: { class: 'form-control', placeholder: 'Titre du tarif'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price, { attr: { class: 'form-control', placeholder: 'Prix'}}) }}
                    {{ form_errors(form.price) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.pricingCategory) }}
                    {{ form_widget(form.pricingCategory, { attr: { class: 'form-control', placeholder: 'Prix'}}) }}
                    {{ form_errors(form.pricingCategory) }}
                </div>
                <button class="btn btn-primary" type="submit">Cr√©er</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
